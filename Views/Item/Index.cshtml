@model IEnumerable<InAndOut.Models.Item>
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-10">
            <h2 class="text-primary">
                Items List
            </h2>
        </div>
        <div class="col-2">
            <a asp-action="Create" class="btn btn-success text-white">Create new Item</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (InAndOut.Models.Item item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Borrower</td>
                        <td>@item.Lender</td>
                        <td>
                            <a class="btn btn-primary text-white">Edit</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id ="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items created yet.</p>
    }
</div>